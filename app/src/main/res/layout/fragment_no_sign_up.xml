<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="280dp"
        app:backgroundTint="@color/white_purple"
        app:layout_constraintEnd_toEndOf="@+id/tv_benefit"
        app:layout_constraintBottom_toTopOf="@+id/tv_benefit"
        />


    <TextView
        android:id ="@+id/tv_benefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="@string/benefit"
        android:textSize ="20sp"
        android:textStyle ="bold"
        android:textColor ="@color/dark_purple"
        android:layout_marginTop="110dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id ="@+id/tv_benefit_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text ="@string/benefit_desc"
        android:textSize ="14sp"
        android:textColor ="@color/dark_purple"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_benefit"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id ="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="@string/sign_up"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:textSize ="14sp"
        android:textColor ="@color/black"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/yellow"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_benefit_desc"
        />

    <ImageView
        android:id ="@+id/iv_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src ="@drawable/ic__card"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_up"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="200dp"
        android:layout_marginTop="32dp"
        app:backgroundTint="@color/white_purple"
        app:layout_constraintTop_toBottomOf="@+id/iv_card"
        app:layout_constraintStart_toEndOf="@+id/iv_card"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="118dp"
        android:layout_marginTop="94dp"
        app:backgroundTint="@color/beige"
        app:layout_constraintTop_toBottomOf="@+id/iv_card"
        app:layout_constraintEnd_toStartOf="@+id/iv_card"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>